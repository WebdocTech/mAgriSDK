<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="vertical">


   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/Prescription_shadowLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#fafafa"
       android:gravity="center"
       android:padding="8dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/tv_complain"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="12dp"
          android:layout_marginTop="12dp"
          android:layout_marginEnd="8dp"
          android:text="Complain for Consultations"
          android:textColor="@android:color/black"
          android:textSize="@dimen/textSize_14"
          app:layout_constraintEnd_toStartOf="@+id/iv_next"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/tv_date"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:text="Date of Consultation"
          android:textColor="@android:color/black"
          android:textSize="@dimen/textSize_14"
          app:layout_constraintEnd_toEndOf="@+id/tv_complain"
          app:layout_constraintStart_toStartOf="@+id/tv_complain"
          app:layout_constraintTop_toBottomOf="@+id/tv_complain" />

      <TextView
          android:id="@+id/tv_drName"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="12dp"
          android:text="Doctor Name"
          android:textColor="@android:color/black"
          android:textSize="@dimen/textSize_14"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="@+id/tv_date"
          app:layout_constraintStart_toStartOf="@+id/tv_date"
          app:layout_constraintTop_toBottomOf="@+id/tv_date" />

      <ImageView
          android:id="@+id/iv_next"
          android:layout_width="40dp"
          android:layout_height="0dp"
          android:tint="#bdbdbd"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_arrow_right"
          tools:ignore="ContentDescription" />

   </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


